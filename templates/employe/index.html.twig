{% extends 'base.html.twig' %}

{% block title %}Employes{% endblock %}

{% block body %}
    <h1>Liste des employés</h1>

    <a class="btn btn-primary" href="{{ path('add_employe') }}">Ajouter un(e) employé(e)</a><br>

    {% for employe in employes %}
        <a href=" {{ path('show_employe', {'id': employe.id}) }}">{{ employe }}</a>
        <a class="btn btn-warning" href="{{ path('edit_employe', {'id': employe.id}) }}">Editer</a>
        <a class="btn btn-danger" href="{{ path('delete_employe', {'id': employe.id}) }}">Supprimer</a><br>
    {% endfor %}

{% endblock %}
