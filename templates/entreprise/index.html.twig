{% extends 'base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>

    <a class="btn btn-primary" href="{{ path('add_entreprise') }}">Ajouter une entreprise</a><br>
    
    {% for entreprise in entreprises %}
        {# {{ entreprise.raisonSociale }} <br> #}
        {# {{ dump(entreprise) }} == var_dump() #}
        <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{ entreprise }}</a>
        <a class ="btn btn-warning" href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">Editer</a>
        <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">Supprimer</a><br>
    {% endfor %}
{% endblock %}
